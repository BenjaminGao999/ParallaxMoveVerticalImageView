<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gaos.paralaxmoveverticalimageview.MainActivity">

    <com.gaos.paralaxmoveverticalimageview.view.WidthMatchParentImageView
        android:id="@+id/wmpiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:src="@drawable/soilder" />

    <com.gaos.paralaxmoveverticalimageview.view.PathView
        android:id="@+id/pathview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wmpiv"
        android:layout_marginTop="10dp" />

    <com.gaos.paralaxmoveverticalimageview.view.RoundRectImageView
        android:id="@+id/rriv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pathview"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/soilder" />

    <com.gaos.paralaxmoveverticalimageview.view.RoundRectMoveVerticalImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rriv"
        android:layout_marginTop="10dp"
        android:src="@drawable/soilder" />
</RelativeLayout>
